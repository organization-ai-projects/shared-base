#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# Post-commit tasks
echo "ğŸ”„ Starting post-commit tasks..."

# Check for outdated dependencies
echo "ğŸ“¦ Checking for outdated dependencies..."
outdated=$(pnpm outdated --json || true)
if [ "$outdated" != "null" ] && [ -n "$outdated" ]; then
  echo "âš ï¸ Some dependencies are outdated:"
  pnpm outdated
else
  echo "âœ… All dependencies are up to date."
fi

# Validate commit message format
echo "ğŸ“ Validating commit message format..."
if ! pnpm commitlint --edit "$1"; then
  echo "âŒ Commit message validation failed. Please follow the commit convention."
  echo "Example: feat(scope): add a new feature"
  exit 1
fi

# Confirm successful post-commit
echo "âœ… Post-commit tasks completed successfully."
