#!/bin/sh

# Stop on error
set -e

# Debugging line to confirm hook execution
echo "ğŸ“ commit-msg hook executed for $1" >&2

# Validate commit message
echo "ğŸ“ Validating commit message..."

# Check if pnpm is installed
if ! command -v pnpm > /dev/null; then
  echo "âŒ pnpm is not installed. Please install it from https://pnpm.io/installation."
  exit 1
fi

# Check if Commitlint is installed
if ! pnpm ls @commitlint/cli > /dev/null 2>&1; then
  echo "âŒ Commitlint is not installed. Please install it with 'pnpm add -D @commitlint/cli'."
  exit 1
fi

# Check if the commit message file exists
if [ ! -f "$1" ]; then
  echo "âŒ Commit message file not found: $1"
  exit 1
fi

# Run Commitlint
if ! pnpm commitlint --edit "$1"; then
  echo "âŒ Commit message validation failed. Please follow the commit conventions."
  echo "ğŸ”— See: https://www.conventionalcommits.org/"
  echo "Examples of valid messages:"
  echo "  feat(core): add a new feature"
  echo "  fix(ui): resolve alignment issue"
  echo "  chore(deps): update dependencies"
  exit 1
fi

# Show validated message
echo "ğŸ“„ Commit message: $(cat "$1")"
echo "âœ… Commit message validation passed."
