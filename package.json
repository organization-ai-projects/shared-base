{
  "name": "@organization-ai-projects/shared-base",
  "version": "1.3.0",
  "description": "A TypeScript-based utility library for simplifying and accelerating development.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run generate-index && tsc",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --fix",
    "watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "postinstall": "node -e \"if (process.platform === 'win32') { require('child_process').execSync('if exist .husky\\\\_ (move .husky\\\\_\\\\* .husky\\\\ && rmdir .husky\\\\_)') }\"",
    "pack:check": "npm pack && tar -tf *.tgz",
    "check:outdated": "pnpm outdated",
    "generate-index": "ts-node --esm generateIndex.ts",
    "format": "prettier --write .",
    "lint:staged": "lint-staged"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "lodash": "^4.17.21",
    "tslib": "^2.8.1",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/expect": "^2.1.8",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/organization-ai-projects/shared-base.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "typescript",
    "esm",
    "shared",
    "framework",
    "utilities",
    "library",
    "open-source",
    "development tools"
  ],
  "author": "Bezot RÃ©mi <bezot.remi@gmail.com>",
  "bugs": {
    "url": "https://github.com/organization-ai-projects/shared-base/issues"
  },
  "homepage": "https://github.com/organization-ai-projects/shared-base#readme",
  "packageManager": "pnpm@8.15.4"
}
