{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "node"],
    "lib": ["ESNext", "dom"],
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "./generateIndex.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
